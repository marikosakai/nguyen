<div class="row">
	<aside class="span4">
		<section>
			<img src="<%= "http://www.gravatar.com/avatar/" + Digest::MD5::hexdigest(@user.email) + ".png"%>">
			<h1>
				<%= @user.name %>
			</h1>
		</section>
	</aside>

	<div class="span8">
		<ul class="tweets"> 
			<% @tweets.each do |tweet| %>
			<li>
			<%= tweet.content %>
			</li>
			<% end %>
		</ul>
	</div>
</div>
